<Window x:Class="DungeonGameWpf.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Settings"
        Width="640"
        Height="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                    EndPoint="1,1">
                <GradientStop Color="#FF0A0A0A"
                        Offset="0"/>
                <GradientStop Color="#FF1A1A2E"
                        Offset="0.5"/>
                <GradientStop Color="#FF16213E"
                        Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Style="{StaticResource Card}"
                Margin="12,12,12,6">
            <StackPanel>
                <TextBlock Text="⚙️ Game Settings"
                           Style="{StaticResource TitleText}"
                           HorizontalAlignment="Center"
                           FontSize="28"/>
                <TextBlock Text="Customize your gaming experience"
                           Style="{StaticResource SubtitleText}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      Margin="12,6,12,6">
            <StackPanel>
                <!-- Audio Settings -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="🔊 Audio Settings"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>

                        <CheckBox x:Name="ChkBgm"
                                  Content="🎵 Enable Background Music"
                                  FontSize="14"
                                  Margin="0,4"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,8">
                            <TextBlock Text="🎶 BGM Volume:"
                                       Width="140"
                                       VerticalAlignment="Center"/>
                            <Slider x:Name="SldBgm"
                                    Minimum="0"
                                    Maximum="1"
                                    Value="0.4"
                                    TickFrequency="0.05"
                                    Width="180"
                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtBgmValue"
                                       Text="40%"
                                       Width="40"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>

                        <CheckBox x:Name="ChkSfx"
                                  Content="🔔 Enable Sound Effects"
                                  FontSize="14"
                                  Margin="0,4"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,8">
                            <TextBlock Text="🔊 SFX Volume:"
                                       Width="140"
                                       VerticalAlignment="Center"/>
                            <Slider x:Name="SldSfx"
                                    Minimum="0"
                                    Maximum="1"
                                    Value="0.8"
                                    TickFrequency="0.05"
                                    Width="180"
                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtSfxValue"
                                       Text="80%"
                                       Width="40"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Game Settings -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="🎮 Game Settings"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,4">
                            <TextBlock Text="🎯 Difficulty Level:"
                                       Width="140"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbDifficulty"
                                      Width="180"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="Easy"/>
                                <ComboBoxItem Content="Normal"/>
                                <ComboBoxItem Content="Hard"/>
                                <ComboBoxItem Content="Nightmare"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,8">
                            <TextBlock Text="📐 Grid Size:"
                                       Width="140"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbGridSize"
                                      Width="180"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="3x3"/>
                                <ComboBoxItem Content="5x5"/>
                                <ComboBoxItem Content="7x7"/>
                                <ComboBoxItem Content="10x10"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox x:Name="ChkPowerUps"
                                  Content="⚡ Enable Power-Ups"
                                  FontSize="14"
                                  Margin="0,8,0,4"
                                  IsChecked="True"/>

                        <CheckBox x:Name="ChkSpecialTiles"
                                  Content="🎪 Enable Special Tiles"
                                  FontSize="14"
                                  Margin="0,4"
                                  IsChecked="True"/>

                        <CheckBox x:Name="ChkAnimations"
                                  Content="✨ Enable Animations"
                                  FontSize="14"
                                  Margin="0,4"
                                  IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- Display Settings -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="🖥️ Display Settings"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>

                        <CheckBox x:Name="ChkFullscreen"
                                  Content="🖼️ Fullscreen Mode"
                                  FontSize="14"
                                  Margin="0,4"/>

                        <CheckBox x:Name="ChkShowFPS"
                                  Content="📊 Show Performance Info"
                                  FontSize="14"
                                  Margin="0,4"/>

                        <CheckBox x:Name="ChkShowTileValues"
                                  Content="🔍 Show Tile Values"
                                  FontSize="14"
                                  Margin="0,4"
                                  IsChecked="True"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,8">
                            <TextBlock Text="🌟 Theme:"
                                       Width="140"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbTheme"
                                      Width="180"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Cyber Neon"/>
                                <ComboBoxItem Content="Dark Fantasy"/>
                                <ComboBoxItem Content="Retro Gaming"/>
                                <ComboBoxItem Content="Classic"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- AI Settings -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="🤖 AI Settings"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,4">
                            <TextBlock Text="🧠 AI Difficulty:"
                                       Width="140"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbAIDifficulty"
                                      Width="180"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="Beginner"/>
                                <ComboBoxItem Content="Intermediate"/>
                                <ComboBoxItem Content="Expert"/>
                                <ComboBoxItem Content="Master"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox x:Name="ChkShowAIThinking"
                                  Content="💭 Show AI Decision Process"
                                  FontSize="14"
                                  Margin="0,8,0,4"/>

                        <CheckBox x:Name="ChkAutoTrain"
                                  Content="📚 Auto-train AI from games"
                                  FontSize="14"
                                  Margin="0,4"
                                  IsChecked="True"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2"
                Style="{StaticResource Card}"
                Margin="12,6,12,12">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource SuccessButton}"
                        Click="Ok_Click"
                        Width="120"
                        Content="✅ Apply"/>
                <Button Style="{StaticResource FancyButton}"
                        Click="Reset_Click"
                        Width="120"
                        Content="🔄 Reset"/>
                <Button Style="{StaticResource DangerButton}"
                        Click="Cancel_Click"
                        Width="120"
                        Content="❌ Cancel"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
