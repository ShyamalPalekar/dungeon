<Window x:Class="DungeonGameWpf.Windows.TrainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Train AI"
        Width="820"
        Height="560"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                    EndPoint="1,1">
                <GradientStop Color="#FF0A0A0A"
                        Offset="0"/>
                <GradientStop Color="#FF16213E"
                        Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}"
                Grid.Row="0">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Episodes:"
                           Margin="0,0,8,0"/>
                <TextBox x:Name="TbEpisodes"
                         Width="80"
                         Text="500"/>
                <TextBlock Text="  ε (epsilon):"
                           Margin="12,0,8,0"/>
                <TextBox x:Name="TbEps"
                         Width="60"
                         Text="0.15"/>
                <TextBlock Text="  α (alpha):"
                           Margin="12,0,8,0"/>
                <TextBox x:Name="TbAlpha"
                         Width="60"
                         Text="0.2"/>
                <TextBlock Text="  γ (gamma):"
                           Margin="12,0,8,0"/>
                <TextBox x:Name="TbGamma"
                         Width="60"
                         Text="0.95"/>
                <Button Style="{StaticResource FancyButton}"
                        Margin="12,0,0,0"
                        Click="BtnTrain_Click">TRAIN</Button>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource Card}"
                Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Canvas x:Name="LossCanvas"
                        Grid.Row="0"
                        Background="#11202E"
                        Margin="4"/>
                <Canvas x:Name="AccCanvas"
                        Grid.Row="1"
                        Background="#11202E"
                        Margin="4"/>
            </Grid>
        </Border>

        <Border Style="{StaticResource Card}"
                Grid.Row="2">
            <TextBlock x:Name="TxtSummary"
                       Style="{StaticResource BodyText}"/>
        </Border>
    </Grid>
</Window>
