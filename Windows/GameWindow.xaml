<Window x:Class="DungeonGameWpf.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🏰 Dungeon Game - Epic Battle Arena"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#FF0A0A0A"
                              Offset="0"/>
                <GradientStop Color="#FF1A1A2E"
                              Offset="0.5"/>
                <GradientStop Color="#FF16213E"
                              Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Game Board -->
        <Border Style="{StaticResource Card}"
                Grid.Column="0"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Game Header -->
                <Border Grid.Row="0"
                        Background="#22FFFFFF"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left side: Game mode and status -->
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="0">
                            <TextBlock x:Name="TxtMode"
                                       Style="{StaticResource TitleText}"
                                       FontSize="24"/>
                            <TextBlock Text=" | "
                                       Style="{StaticResource SubtitleText}"
                                       FontSize="20"
                                       Margin="10,0"/>
                            <TextBlock Text="⚔️ Battle in Progress"
                                       Style="{StaticResource SubtitleText}"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Right side: Score -->
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1">
                            <TextBlock Text="🏆 Score: "
                                       Style="{StaticResource SubtitleText}"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtScore"
                                       Text="0"
                                       Style="{StaticResource ScoreText}"
                                       FontSize="20"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Game Board -->
                <Border Grid.Row="1"
                        Background="#11FFFFFF"
                        CornerRadius="15"
                        Padding="10">
                    <UniformGrid x:Name="Board"
                                 Rows="1"
                                 Columns="1"/>
                </Border>
            </Grid>
        </Border>

        <!-- Enhanced Sidebar HUD -->
        <ScrollViewer Grid.Column="1"
                      Margin="20">
            <StackPanel>

                <!-- Player Status Panel -->
                <Border Style="{StaticResource Card}"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="👤 PLAYER STATUS"
                                   Style="{StaticResource TitleText}"
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <!-- Health Bar -->
                        <TextBlock Text="💖 Health Points"
                                   Style="{StaticResource SubtitleText}"
                                   FontSize="14"/>
                        <ProgressBar x:Name="HealthBar"
                                     Style="{StaticResource HealthBar}"
                                     Value="100"
                                     Maximum="100"
                                     Margin="0,5,0,10"/>
                        <TextBlock x:Name="TxtHP"
                                   Text="100"
                                   Style="{StaticResource ScoreText}"
                                   FontSize="28"
                                   HorizontalAlignment="Center"/>

                        <!-- Position -->
                        <TextBlock Text="📍 Current Position"
                                   Style="{StaticResource SubtitleText}"
                                   FontSize="14"
                                   Margin="0,15,0,5"/>
                        <Border Background="#22FF6B35"
                                CornerRadius="8"
                                Padding="10">
                            <TextBlock x:Name="TxtCurrentPos"
                                       Text="(0,0)"
                                       Style="{StaticResource ScoreText}"
                                       FontSize="20"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- AI Reasoning Panel -->
                <Border Style="{StaticResource Card}"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🧠 AI MIND PALACE"
                                   Style="{StaticResource TitleText}"
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <!-- AI Emotion Display -->
                        <Border Background="#22FF073A"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="😤 Current Emotion"
                                           Style="{StaticResource SubtitleText}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TxtAIEmotion"
                                           Text="😊"
                                           Style="{StaticResource ScoreText}"
                                           FontSize="24"
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TxtAIStatus"
                                           Text="Confident"
                                           Style="{StaticResource SubtitleText}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- AI Thinking Process -->
                        <Border Background="#1100F5FF"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="💭 AI REASONING"
                                           Style="{StaticResource SubtitleText}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="TxtAIThinking"
                                           Text="Analyzing battlefield..."
                                           Style="{StaticResource SubtitleText}"
                                           FontSize="11"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- AI Performance Stats -->
                        <Border Background="#22FFD700"
                                CornerRadius="10"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="📊 PERFORMANCE"
                                           Style="{StaticResource SubtitleText}"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="🔥 Score:"
                                               Grid.Row="0"
                                               Grid.Column="0"
                                               Style="{StaticResource SubtitleText}"
                                               FontSize="10"/>
                                    <TextBlock x:Name="TxtScoreDetail"
                                               Text="0"
                                               Grid.Row="0"
                                               Grid.Column="1"
                                               Style="{StaticResource ScoreText}"
                                               FontSize="10"/>

                                    <TextBlock Text="⏱️ Time:"
                                               Grid.Row="1"
                                               Grid.Column="0"
                                               Style="{StaticResource SubtitleText}"
                                               FontSize="10"/>
                                    <TextBlock x:Name="TxtSolvingTime"
                                               Text="0.0s"
                                               Grid.Row="1"
                                               Grid.Column="1"
                                               Style="{StaticResource ScoreText}"
                                               FontSize="10"/>

                                    <TextBlock Text="👣 Moves:"
                                               Grid.Row="2"
                                               Grid.Column="0"
                                               Style="{StaticResource SubtitleText}"
                                               FontSize="10"/>
                                    <TextBlock x:Name="TxtTotalMoves"
                                               Text="0"
                                               Grid.Row="2"
                                               Grid.Column="1"
                                               Style="{StaticResource ScoreText}"
                                               FontSize="10"/>

                                    <TextBlock Text="🏆 Win Rate:"
                                               Grid.Row="3"
                                               Grid.Column="0"
                                               Style="{StaticResource SubtitleText}"
                                               FontSize="10"/>
                                    <TextBlock x:Name="TxtWinRate"
                                               Text="0%"
                                               Grid.Row="3"
                                               Grid.Column="1"
                                               Style="{StaticResource ScoreText}"
                                               FontSize="10"/>
                                </Grid>

                                <TextBlock x:Name="TxtAiStats"
                                           Text="Episodes: 0 | Accuracy: 0%"
                                           Style="{StaticResource SubtitleText}"
                                           FontSize="9"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Action Controls -->
                <Border Style="{StaticResource Card}"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🎮 BATTLE CONTROLS"
                                   Style="{StaticResource TitleText}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <!-- Movement Buttons -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Style="{StaticResource SuccessButton}"
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Content="➡️ Right"
                                    FontSize="12"
                                    Height="40"
                                    Margin="2"
                                    Click="BtnRight_Click"/>
                            <Button Style="{StaticResource SuccessButton}"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Content="⬇️ Down"
                                    FontSize="12"
                                    Height="40"
                                    Margin="2"
                                    Click="BtnDown_Click"/>
                            <Border x:Name="TurnIndicator"
                                    Style="{StaticResource Card}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Height="40"
                                    Margin="2"
                                    Background="#FF00FF9F">
                                <TextBlock x:Name="TxtCurrentTurn"
                                           Text="👤 Your Turn"
                                           Style="{StaticResource SubtitleText}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                            </Border>
                        </Grid>

                        <!-- Action Buttons -->
                        <Button Style="{StaticResource FancyButton}"
                                Click="BtnReset_Click"
                                Content="🔄 Reset Battle"
                                Margin="0,10,0,5"
                                Height="35"/>
                        <Button Style="{StaticResource InfoButton}"
                                Click="BtnHelp_Click"
                                Content="Help and Tutorial"
                                Margin="0,5"
                                Height="35"/>
                        <Button Style="{StaticResource DangerButton}"
                                Click="BtnMenu_Click"
                                Content="🏠 Return to Base"
                                Height="35"/>
                    </StackPanel>
                </Border>

                <!-- Game Statistics -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="📈 BATTLE STATS"
                                   Style="{StaticResource TitleText}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="🎯 DP Solver Analysis:"
                                   Style="{StaticResource SubtitleText}"
                                   FontSize="12"
                                   Margin="0,5"/>
                        <TextBlock x:Name="TxtDpMin"
                                   Text="Calculating optimal strategy..."
                                   Style="{StaticResource SubtitleText}"
                                   FontSize="10"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="⚡ Power-ups Active:"
                                   Style="{StaticResource SubtitleText}"
                                   FontSize="12"
                                   Margin="0,10,0,5"/>
                        <TextBlock x:Name="TxtPowerUps"
                                   Text="None"
                                   Style="{StaticResource SubtitleText}"
                                   FontSize="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
